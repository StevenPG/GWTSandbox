package stevengantz.memory;

import stevengantz.memory.MemoryCard;

/**
 * Author: Steven Gantz
 * Date: 2/2/2016
 * Created for CSC421, Dr. Spiegel
 * Project Due:
 * This file is a writer that takes a memory card
 * and prints it to a terminal.
 **/
public class MemoryCardWriter {
	
	/**
	 * Internally managed memory card
	 */
	protected MemoryCard mem;
	
	/**
	 * General use constructor, saves 
	 * a memory card for writing
	 * @param mem
	 */
	public MemoryCardWriter(MemoryCard mem){
		this.mem = mem;
	}
	
	/**
	 * Draws the front of a 
	 * memory card to the screen
	 */
	public String writeFront(){
		StringBuilder builder =
				new StringBuilder();
		builder.append("[");
		builder.append(this.mem.getFrontSymbol());
		builder.append("]");
		return builder.toString();
	}
	
	/**
	 * Draws the back of a 
	 * memory card to the screen
	 */
	public String writeBack(){
		StringBuilder builder =
				new StringBuilder();
		builder.append("[");
		builder.append(this.mem.getBackSymbol());
		builder.append("]");
	}
}
