package stevengantz.client;

import java.util.ArrayList;

import com.google.gwt.core.client.EntryPoint;
import com.google.gwt.event.dom.client.ErrorEvent;
import com.google.gwt.event.dom.client.ErrorHandler;
import com.google.gwt.user.client.ui.HorizontalPanel;
import com.google.gwt.user.client.ui.Image;
import com.google.gwt.user.client.ui.RootPanel;

import stevengantz.memory.data.Appdata;

/**
 * Entry point classes define <code>onModuleLoad()</code>.
 */
public class memory implements EntryPoint {

    ArrayList<Image> backCardImageArray = new ArrayList<Image>();

    /**
     * This is the entry point method.
     */
    public void onModuleLoad() {

        this.loadImages();
        this.setImageSizes();

        HorizontalPanel horiz = new HorizontalPanel();

        RootPanel.get().add(horiz);
    }

    private void loadImages() {

        // Create and assign images
        for (int i = 0; i < Appdata.numberOfCards; i++) {
            // Add the image to the cardList
            this.backCardImageArray.add(new Image());

            // Set Url for all backCardImages
            this.backCardImageArray.get(i).setUrl("img/card-back.jpg");
            
            // Assign error handlers for each card
            this.backCardImageArray.get(i).addErrorHandler(new ErrorHandler() {
                @Override
                public void onError(ErrorEvent event) {
                        backCardImageArray.get(i).setUrl("http://i.imgur.com/74FVTpV.jpg?1");                
                }
            });
            
            this.backCardImageArray.get(i).setPixelSize(Appdata.cardWidth, Appdata.cardHeight);
        }

    }

    private void setImageSizes() {
        this.cardBack.setPixelSize(Appdata.cardWidth, Appdata.cardHeight);
        this.errorImage.setPixelSize(Appdata.cardWidth, Appdata.cardHeight);
    }
}
