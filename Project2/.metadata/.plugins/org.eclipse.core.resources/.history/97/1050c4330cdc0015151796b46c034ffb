package stevengantz.memory.card;

import com.google.gwt.user.client.ui.Image;

import stevengantz.memory.data.Appdata;

/**
 * @author Steven Gantz
 * @date 2/25/2016
 * @file This file implements CardFace and creates images for a memory card.
 */
public class ImageCardFace implements CardFace {
    /**
     * This string will contain what will represent the face of a card.
     */
    private Image cardFace;

    public ImageCardFace(String cardFaceURI) {
        this.cardFace = new Image();
        this.cardFace.setUrl(cardFaceURI);
        this.cardFace.setPixelSize(Appdata.cardWidth, Appdata.cardHeight);
    }

    /**
     * Accessor method for retrieving the card face
     * 
     * @return card face image
     */
    public Image getFace() {
        return this.cardFace;
    }

    /**
     * This method overrides the java.lang.Object.toString method.
     * 
     * @return string representation of object
     */
    @Override
    public String toString() {
        return new String("");
    }
}
